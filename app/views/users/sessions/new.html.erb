<div class='smallForm'>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div><%= f.label '邮箱' %><br />
  <%= f.email_field :email, autofocus: true, class: "form-control" %></div>

  <div><%= f.label '密码' %><br />
    <%= f.password_field :password, autocomplete: "off", class: "form-control" %></div>

  <% if devise_mapping.rememberable? -%>
    <div><%= f.check_box :remember_me %> <%= f.label '记住我' %></div>
  <% end -%>

  <div><%= f.submit "登录", class: 'btn btn-primary' %></div>
<% end %>
<p>&nbsp;</p>
<%= render "users/shared/links" %>
</div>
